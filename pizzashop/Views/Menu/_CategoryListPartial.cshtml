@using pizzashop_repository.ViewModels;
@model List<CategoryViewModel>

@{
    var perms = ViewBag.Permissions as RolePermissionViewModel;
}

<ul id="category-list">
    @if (Model != null && Model.Any())
    {
        @foreach (var category in Model)
        {

            <li class="mb-3 category-item" data-id="@category.Id" data-name="@category.Name"
                data-description="@category.Description">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex">
                        <div>
                            <img class="sixdot-icon" src="/images/icons/dots-six-vertical-thin-svgrepo-com.svg" alt="">
                        </div>
                        <div><a href="#"
                                class="category-sidebar">@category.Name</a>
                        </div>
                    </div>
                    <div class="d-flex category-actions d-none">
                        @if (perms?.CanaddEdit == true)
                        {
                            <div class="me-2">
                                <a href="#" class="edit-category" data-id="@category.Id">
                                    <img src="/images/icons/pen.svg" alt="">
                                </a>
                            </div>
                        }
                        @if (perms?.Candelete == true)
                        {
                        <div>
                            <a href="#" class="delete-category" data-id="@category.Id">
                                <img src="/images/icons/trash.svg" alt="">
                            </a>
                        </div>
                        }
                </div>
            </li>


        }
    }
</ul>