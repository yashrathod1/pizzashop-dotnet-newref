@model pizzashop_repository.ViewModels.WaitingTokenViewModel

 <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Waititng Token Details</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>  
            <div class="modal-body"> 
                <form id="EditWaitingTokenTable" method="post" class="P-2">

                    <input type="hidden" id="eselectedSectionId" name="selectedSectionId">
                    <input type="hidden" id="tokenId" name="TokenId">

                    <div class="form-floating mb-3">
                        <input type="email" asp-for="Email" class="form-control" id="ecustomerEmail" placeholder="Email*">
                        <label>Email*</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" asp-for="Name" class="form-control" id="ecustomerName" placeholder="Name*">
                        <label>Name*</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" asp-for="MobileNo" class="form-control" id="ecustomerMobile"placeholder="Mobile Number*">
                        <label>Mobile Number*</label>
                        <span asp-validation-for="MobileNo" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <input type="text" id="enop" asp-for="NoOfPerson" class="form-control"
                                    placeholder="No.of Person(s)*">
                                <label >No.of Person(s)*</label>
                                <span asp-validation-for="NoOfPerson" class="text-danger nop"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating">
                                <select class="form-select" id="eWaititngTokensectionId" asp-for="SectionId"
                                    aria-label="Floating label select example">
                                </select>
                                <label>Section*</label>
                                <span asp-validation-for="SectionId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end gap-2">
                        <button type="sumbit" id="AssignWaitingTokenBtn" class="btn navbar-color text-white">Save</button>
                        <button type="button" class="btn cancel-btn-color" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>