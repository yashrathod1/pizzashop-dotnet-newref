@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>404 - Page Not Found</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #d8eff8;
            height: 100vh;
            margin: 0;
            align-content: center;
        }

        .blue-color {
            color: #0066a7;
        }

        .brand-logo {
            width: 60px;
        }
    </style>
</head>

<body>
    <div class="container-fluid">

        <div>
            <div class="d-flex justify-content-center align-items-center ">
                <img src="~/images/logos/pizzashop_logo.png" alt="Logo" class="img-fluid brand-logo me-2">
                <div class="blue-color h1">PIZZASHOP</div>
            </div>
            <div class="blue-color fw-bold d-flex justify-content-center mt-3">
                <p style="font-size: 150px;">404</p>
            </div>
            <h4 class="fw-semibold d-flex justify-content-center">Page Not Found</h4>
            <p class="text-primary message d-flex justify-content-center">Oops, the page you're looking for isn't here.
            </p>

        </div>
    </div>
</body>

</html>
